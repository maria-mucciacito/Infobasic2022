<h2 class="m-3 text-center">Update Pagamenti</h2>
<div class="container text-center">
  <div class="row m-3">
    <form class="row g-3" method="post" action="/dashboard/payment/get/{{data.id}}">
      <div class="col-md-6">
        <label for="numero_carta" class="form-label">Numero Carta</label>
        <input type="text" class="form-control" id="numero_carta" value="{{data.numero_carta}}" name="numero_carta" required>
      </div>
      <div class="col-md-6">
        <label for="scadenza" class="form-label">Scadenza</label>
        <input type="date" class="form-control" id="scadenza" value="{{data.scadenza}}" name="scadenza" required>
      </div>
      <div class="col-md-6">
        <label for="code_sicurezza" class="form-label">Code Sicurezza</label>
        <input type="text" class="form-control" id="code_sicurezza" value="{{data.code_sicurezza}}" name="code_sicurezza" required>
      </div>
      <div class="col-md-6">
        <label for="tipo" class="form-label">Tipo</label>
        <input type="text" class="form-control" id="tipo" value="{{data.tipo}}" name="tipo" required>
      </div>
      <div class="col-12">
        <button class="btn btn-warning mt-5">Update</button>
      </div>
    </form>
  </div>
</div>