<h2 class="m-3 text-center">Update Taxi</h2>
<div class="container text-center">
  <div class="row m-3">
    <form class="row g-3" method="post" action="/dashboard/taxi/get/{{data.id}}">
      <div class="col-md-6">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" value="{{data.nome}}" name="nome">
      </div>
      <div class="col-md-6">
        <label for="targa" class="form-label">Targa</label>
        <input type="text" class="form-control" id="targa" value="{{data.targa}}" name="targa">
      </div>
      <div class="col-md-6">
        <label for="mdoello" class="form-label">Modello</label>
        <input type="text" class="form-control" id="modello" value="{{data.modello}}" name="modello">
      </div>
      <div class="col-md-6">
        <label for="descrizione" class="form-label">Descrizione</label>
        <input type="text" class="form-control" id="descrizione" value="{{data.descrizione}}" name="descrizione">
      </div>
      <div class="col-12">
        <button class="btn btn-warning mt-5">Update</button>
      </div>
    </form>
  </div>
</div>