<div class="conteiner container-fluid m-5 p-3">
    <div class="row m-3">
    <div class="col-10"><h2>Gestione Payment</h2></div>
    <div class="col-2">
        <a class="btn btn-warning" href="/dashboard/payment/insert" role="button">+ Insert</a>
    </div>
    </div>
    <div class="row m-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NUMERO CARTA</th>
                    <th scope="col">SCADENZA</th>
                    <th scope="col">CODE SICUREZZA</th>
                    <th scope="col">TIPO</th>
                </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.numero}}</td>
                    <td>{{this.targa}}</td>
                    <td>{{this.modello}}</td>
                    <td>{{this.descrizione}}</td>
                    <td><a class="btn btn-dark btn-sm" href="/dashboard/taxi/{{this.id}}" role="button">Update</a></td>
                    <td><a class="btn btn-dark btn-sm" href="/dashboard/taxi/delete/{{this.id}}" role="button" onclick="return window.confirm('Sei sicuro di voler cancellare {{this.nome}} ?'); ">Delete</a></td>
                </tr>
            {{/each}}
            
            </tbody>
        </table>
    </div>
</div>


