<h2 class="m-3 text-center">Insert Pagamento</h2>
<div class="container text-center">
  <div class="row m-3">
    <form class="row g-3" method="post" action="/dashboard/payment">
      <div class="col-md-6">
        <label for="numeroCarta" class="form-label">Numero Carta</label>
        <input type="text" class="form-control" id="numeroCarta" name="numeroCarta" required>
      </div>
      <div class="col-md-6">
        <label for="scadenza" class="form-label">Scadenza</label>
        <input type="date" class="form-control" id="scadenza" name="scadenza" required>
      </div>
      <div class="col-md-6">
        <label for="codeSicurezza" class="form-label">Code Sicurezza</label>
        <input type="text" class="form-control" id="codeSicurezza" name="codeSicurezza" required>
      </div>
      <div class="col-md-6">
        <label for="tipo" class="form-label">Tipo</label>
        <input type="text" class="form-control" id="tipo" name="tipo" required>
      </div>
      <div class="col-12">
        <button class="btn btn-warning mt-5">Insert</button>
      </div>
    </form>
  </div>
</div>